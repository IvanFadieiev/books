<div class="row">
  <div class="col-md-12">
    <%= form_for @book do |f| %>
       <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@book.errors.count, 'error') %> prohibited this book from being saved:</h2>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label "Preview" %><br />
        <%= f.file_field :preview %>
      </div>

      <div class="field">
        <%= f.label :category %><br />
        <% Category.all.each do |c| %>
          <%= check_box_tag "category_ids[]", c.id, f.object.category_ids.include?(c.id) %>
          <%= c.name %>
          <br>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <%= f.label :author %><br />
        <%= f.text_area :author %>
      </div>

      <div class="field">
        <%= f.label :body %><br />
        <%= f.text_area :body, rows: 10 %>
      </div>

      <div class="field">
        <%= f.label :draft %><br />
        <%= f.check_box :draft %>
      </div>

      <div class="actions">
        <%= f.submit 'Submit' %>
      </div>
    <% end %>
  </div>
</div>
